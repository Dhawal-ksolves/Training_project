<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <record id="view_bill_form" model="ir.ui.view">
        <field name="name">hospital.bill.form</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <form string="bill">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="patient_id"/>
                        <field name="bill1"/>
                        <field name="bill2"/>
                        <field name="total"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_hospital_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.bill.tree</field>
        <field name="model">hospital.bill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="patient_id"/>
                <field name="bill1"/>
                <field name="bill2"/>
                <field name="total"/>


            </tree>
        </field>
    </record>
    <record id="action_hospital_bill" model="ir.actions.act_window">
        <field name="name">bill</field>
        <field name="res_model">hospital.bill</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>
