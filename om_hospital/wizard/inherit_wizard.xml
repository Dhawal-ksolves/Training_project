<!--                                    <field name="name"/>-->
<!--                                    <field name="product_id"/>-->
<!--                                </tree>-->
<!--                                <form name="medicine_id">-->
<!--                                    <group>-->
<!--                                        <field name="name"/>-->
<!--                                        <field name="product_id"/>-->
<!--                                    </group>-->
<!--                                </form>-->
<!--                        </field>-->
<!--                        <field name="country_id"/>-->
                    </group>
                    <footer>
                        <button name="action_done" type="object" string="Done" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>

                </sheet>
            </form>
        </field>
    </record>
    <record id="action_inherit_wizard" model="ir.actions.act_window">
        <field name="name">Inherit_Wizard</field>
        <field name="res_model">inherit.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_inherit_wizard_form"/>
        <field name="context">{'active_id': active_id}</field>
    </record>
</odoo>