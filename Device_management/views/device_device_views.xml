<odoo>
    <record id="view_device_device_form" model="ir.ui.view">
        <field name="name">device.device.form</field>
        <field name="model">device.device</field>
        <field name="arch" type="xml">
            <form string="Device">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="shared"/>
                        <field name="device_type_id"/>
                        <field name="device_brand_id"/>
                        <field name="device_model_id"/>
                    </group>
                    <notebook>
                        <page string="Attributes">
                            <field name="attributes">
                                <tree>
                                    <field name="device_attribute_id"/>
<!--                                    <field name="value"/>-->
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_device_device_tree" model="ir.ui.view">
        <field name="name">device.device.tree</field>
        <field name="model">device.device</field>
        <field name="arch" type="xml">
            <tree string="Devices">
                <field name="name"/>
                <field name="shared"/>
                <field name="device_type_id"/>
                <field name="device_brand_id"/>
                <field name="device_model_id"/>
            </tree>
        </field>
    </record>
    <record id="action_device_device" model="ir.actions.act_window">
        <field name="name">device.device</field>
        <field name="res_model">device.device</field>
        <field name="view_mode">form,tree</field>
        <field name="context">{}</field>
    </record>
</odoo>
